{
    "schema": "map",
    "title": "Map",
    "description": "A set of service endpoints used by the viewer",
    "type": "object",
    "properties": {
        "name": {
            "title": "Name",
            "type": "string"
        },
        "email": {
            "title": "Email",
            "type": "string",
            "pattern": "^\\S+@\\S+$",
            "description": "Email will be used for evil."
        },
        "comment": {
            "title": "Comment",
            "type": "string",
            "maxLength": 20,
            "validationMessage": "error.email"
        },
        "eligible": {
            "type": "boolean",
            "title": "Eligible for awesome things",
            "default": true
        },
        "code": {
            "type":"string",
            "title": "The Code"
        }
    },
    "required": [
        "name",
        "email",
        "comment"
    ]
}
